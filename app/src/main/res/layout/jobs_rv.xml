<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/_8dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10dp">

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="Full Stack Developer"
            android:textColor="#000000"
            android:textSize="@dimen/_10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyNameHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="Company Name:-"
            android:textColor="@color/semiBlack"
            android:textSize="@dimen/_9sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/designation" />
        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="Infosys"
            android:textColor="#000000"
            android:textSize="@dimen/_9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/companyNameHeading" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/jobTypeHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job Type:-"
            android:layout_marginTop="@dimen/_10dp"
            android:textColor="@color/semiBlack"
            android:textSize="@dimen/_9sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/companyName"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/companyName" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/jobType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Full Time"
            android:textColor="@color/Green"
            android:textSize="@dimen/_9sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/companyName"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/jobTypeHeading" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyLocationHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="Company Location:-"
            android:textSize="@dimen/_10sp"
            android:textColor="@color/semiBlack"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/companyName"
            app:layout_constraintTop_toBottomOf="@id/jobType" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="New York"
            android:textSize="@dimen/_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/companyName"
            app:layout_constraintTop_toBottomOf="@id/companyLocationHeading" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/datePostedHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="Created At:-"
            android:textColor="@color/semiBlack"
            android:textStyle="bold"
            android:textSize="@dimen/_10sp"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/companyLocation" />
        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/datePosted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:text="22 days ago"
            android:textSize="@dimen/_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/datePostedHeading" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyUrlHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Company Url:-"
            android:textSize="@dimen/_10sp"
            android:visibility="visible"
            android:textColor="@color/semiBlack"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="@+id/datePosted"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/datePosted" />
        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/companyUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Company Url"
            android:textSize="@dimen/_10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/datePosted"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/companyUrlHeading" />

        <ImageView
            android:id="@+id/imageCompanyLogo"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_60dp"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/howToApply" />
        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/howToApplyHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Apply:-"
            android:textSize="@dimen/_10sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10dp"
            android:textColor="@color/semiBlack"
            app:layout_constraintEnd_toEndOf="@+id/companyUrl"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/companyUrl" />
        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/howToApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="apply"
            android:textSize="@dimen/_10sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/companyUrl"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/howToApplyHeading" />

        <com.example.retrofitapiexample.widgets.MyTextView
            android:id="@+id/textVie11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="company url"
            android:textSize="@dimen/_10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/companyName"
            app:layout_constraintTop_toBottomOf="@id/datePosted" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>